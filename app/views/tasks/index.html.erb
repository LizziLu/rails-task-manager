<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
  <li> Title: <%= link_to task.title, task_path(task) %> Done: <%= task.completed %> <%= link_to 'Delete',
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %></li>
  <% end %>
</ul>

<%= link_to '+Add a new task', new_task_path%>
